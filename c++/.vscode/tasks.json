{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C++ bulid",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-I/usr/local/mysql-connector-c++-9.3.0/include",
                "-L/usr/local/mysql-connector-c++-9.3.0/lib64",
                "-lmysqlcppconn",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "execute",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "group": "test",
            "presentation": {
                "clear": true
            }
        }
    ]
}